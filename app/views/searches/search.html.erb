<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<% if @user_or_book == "1"%>
			    <h2>Users search for '<%= @search %>'</h2>
			    <table class="table table-hover　col-xs-12">
			    	<thead>
						<tr>
							<th>Image</th>
							<th>Name</th>
						</tr>
					</thead>
					<tbody>
						<% @users.each do |user| %>
							<tr>
								<td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'40x40'%></td>
								<td><%= user.name %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			<% elsif @user_or_book == "2" %>
			    <h2>Books search for '<%= @search %>'</h2>
			    <table class="table table-hover　col-xs-12">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
					</thead>
					<tbody>
						<% @books.each do |book| %>
							<tr>
								<td><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'40x40'%></td>
								<td><%= book.title %></td>
								<td><%= book.body %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			<% end %>
		</div>
	</div>
</div>