<!--Home-->
<body>
  <div class="container">
    <div class="row indexbody">
      <div class="col-xs-3 sidebar">
        <%= render partial: 'users/s_user_info', locals: { user: @user} %>
     　　<%= render partial: 'books/new', locals: { book: @book } %>
      </div>
      <div class="col-xs-9 index">
        <h2>Books</h2>
          <table class="table table-hover">
            <thead>
              <tr>
                <th> </th>
                <th>Title</th>
                <th>Opinion</th>
              </tr>
         　 </thead>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td>
                    <%= link_to user_path(@user.id) do %>
                      <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" ,size:'40x40' %>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to book_path(book.id) do %>
                      <%= book.title %>
                    <% end %>
                  </td>
                  <td><%= book.body %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</body>