<!--User-->
<body>
<div class="container">
  <div class="row indexbody">
      <div class="col-xs-3 sidebar">
      	<%= render partial: 'users/i_user_info' %>
        <div class="indexnew">
      	 <%= render partial: 'books/new', locals: { book: @book } %>
        </div>
      </div>
      <div class="col-xs-9 index">
	    <h2>Users</h2>
	     <table class="table table-hover">
        <thead>
   			  <tr>
   	 			  <th>image</th>
　　  			  <th>name</th>
　　  			  <th> </th>
   			  </tr>
        </thead>
   			<% @users.each do |user| %>
         <tbody>
   			  <tr>
      			<td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'40x40' %></td>
      			<td><%= user.name %></td>
　　   			<td><%= link_to "show", user_path(user.id) %></td>
    		  </tr>
         </tbody>
    		<% end %>
		　 </table>
	   </div>
	</div>
 </div>
</body>