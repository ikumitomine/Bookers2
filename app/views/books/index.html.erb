<!--Books-->
<body>
  <div class="container">
    <div class="error-message">
      <% if @book_n.errors.any? %>
        <h3><%= @book_n.errors.count %>errors prohibited this book from being saved:</h3>
        <ul>
          <% @book_n.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>

    <div class="row indexbody">
      <div class="col-xs-3 sidebar">
        <h2>User info</h2>
        <%= render 'users/user_info', user: current_user %>
        <div class="indexnew">
          <h2>New book</h2>
          <%= render 'new', book: @book_n %>
        </div>
      </div>
      <div class="col-xs-9 index">
        <h2>Books</h2>
        <table class="table table-hover">
          <thead>
            <tr>
   	          <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(book.user.id) do %>
                  <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'40x40'%>
                  <% end %>
                </td>
　　             <td>
                  <%= link_to book_path(book.id) do %>
                    <%= book.title %>
                  <% end %>
                </td>
	              <td><%= book.body %></td>
                <!--いいね-->
                <td>
                  <div id="favorites_buttons_<%= book.id %>">
                    <%= render partial: 'favorites/favorite', locals: { book: book } %>
                  </div>
                </td>
                <!--いいね-->
                <td>コメント数：<%= book.book_comments.count %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>