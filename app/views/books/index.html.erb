<!--Books-->
<% if flash[:notice_e] %>
    <p class="notice"><%= flash[:notice_e] %></p>
<% end %>

<% if @book_n.errors.any? %>
    <h3 class="error-message"><%= @book_n.errors.count %>errors prohibited this book from being saved:</h3>
   　 <ul>
    　<% @book_n.errors.full_messages.each do |message| %>
       <li class="message-list"><%= message %></li>
      <% end %>
      </ul>
<% end %>

<h1>User info</h1>
<%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
<table>
  <tr align="left"><th>name</th><td><%= current_user.name %></td></tr>
  <tr align="left"><th>introduction</th><td><%= current_user.introduction %></td></tr>
</table>
<%= link_to "edit", edit_user_path(current_user.id) %>

<h1>Books</h1>

<main>
<table class="table">
   <tr>
   	<th></th>
　　 <th>Title</th>
　　 <th>Opinion</th>
   </tr>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(book.user.id) do %>
          <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg"%>
        <% end %>
      </td>
　　   <td><%= link_to "book.title", book_path(book.id) %></td>
	  <td><%= book.body %></td>
    </tr>
   <% end %>
</table>

<%= render partial: 'new', locals: { book: @book_n } %>