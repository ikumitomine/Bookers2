	<div class="row">
		<h2>New book</h2>
  </div>
 	<div class="form">
   			<%= form_for(book) do |f| %>
   				<div class="field row">
    				<label for="book_title">Title</label>
    				<input class="col-xs-12 book_title" type="text" name="book[title]" id="book_title">
     			</div>
     			<div class="field row" style="margin-top: 8px;">
				    <label for="book_opinion">Opinion</label>
    				<textarea class="col-xs-12 book_body" name="book[body]" id="book_body"></textarea>
  				</div>
  				<div class="actions row" style="margin-top: 8px;">
  					<input type="submit" name="commit" value="Create Book"
  					class="btn btn-primary col-xs-12" data-disable-with="Create Book">
     			</div>
   			<% end %>
  </div>
