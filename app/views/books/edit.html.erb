<!--本のedit-->
<div class="edit-body">
  <div class="coutainer">
    <div class="row">
      <div class="col-xs-offset-3 col-xs-6">
        <h1>Editing Book</h1>

        <div class="error-message">
          <% if @book.errors.any? %>
            <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
   　        <ul><% @book.errors.full_messages.each do |message| %><li class="message-list"><%= message %></li><% end %></ul>
          <% end %>
        </div>

        <div class="form-body">
          <%= form_for(@book) do |f| %>
            <div class="form-group">
              <label class="control-label" for="book_title">Title</label>
              <%= f.text_field :title, autofocus: true, class:"form-control", id:"book_title" %>
            </div>
            <div class="form-group">
              <label class="control-label" for="book_body">Body</label>
              <%= f.text_area :body, sutofocus: true, class:"form-control", id:"book_body" %>
            </div>
              <%= f.submit "Update Book", class:"btn btn-primary col-xs-12" %>
          <% end %>
        </div>

        <div class="links">
          <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
        </div>
      </div>
    </div>
  </div>
</div>