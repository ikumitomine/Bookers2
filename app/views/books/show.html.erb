<!--User→show→title→useridのBookdetail-->
<body>
  <div class="container">
    <div class="row indexbody">
      <div class="col-xs-3 sidebar">
        <%= render partial: 'users/s_user_info', locals: { user: @user} %>
        <%= render partial: 'new', locals: { book: @book_n }%>
      </div>
      <div class="col-xs-9 indexbody">
        <h2>Book detail</h2>
        <table class="table table-hover">
          <tbody>
            <tr>
              <td>
                <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100'%><br>
                <%= link_to @user.name ,user_path(@user.id) %>
              </td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
                <% if @book.user == current_user %>
                  <td>
                    <%= link_to edit_book_path(@book) do %>
                      <button type="button" class="btn btn-success">Edit</button>
                    <% end %>
                  </td>
       　　        <td>
                    <%= link_to book_path(@book),method: :delete,"data-confirm" => "本当に消しますか？" do %>
                      <button type="botton" class="btn btn-danger">Destroy</button>
                    <% end %>
                  </td>
                <% end %>
                <td>
                  <% if @book.favorited_by?(current_user) %>
                    <%= link_to book_favorites_path(@book), method: :delete do %>
                      <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
                      <%= @book.favorites.count %>
                    <% end %>
                  <% else %>
                    <%= link_to book_favorites_path(@book), method: :post do %>
                      <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
                      <%= @book.favorites.count %>
                    <% end %>
                  <% end %>
                </td>
                <td>
                  <p>コメント数：<%= @book.book_comments.count %></p>
                </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="col-xs-9">
        <% @book.book_comments.each do |book_comment| %>
          <%= attachment_image_tag current_user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'50x50'%>
          <%= book_comment.comment %>
          <% if book_comment.user == current_user %>
            <%= link_to book_book_comment_path(book_comment.book, book_comment), method: :delete do %>
              <button type="botton" class="btn btn-danger">Destroy</button>
            <% end %>
          <% end %><br>
          <%= book_comment.user.name %><br>
        <% end %>
        <%= form_for [@book, @book_comment] do |f| %>
          <%= f.text_area :comment, size: "80" %>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</body>
